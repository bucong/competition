/* pages/search/search.wxss */
page{
  background: #f8f8f8;
}
.head{
  height: 64rpx;
  border-top: 1px solid #c1c1c1;
  background: #d9d9d9;
  padding: 12rpx 30rpx 16rpx 30rpx;
}
.head view{
  background: #fff;
  border-radius: 8rpx;
  height: 64rpx;
}
.head input{
  display: inline-block;
  padding: 6rpx 10rpx;
  width: 620rpx;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 26rpx;
}
.head icon{
  background: #000;
  border-radius: 50%;
  padding: 2rpx;
}
.group{
  margin-top: 30rpx;
  background: #fff;
  border-top: 1px solid #c1c1c1;
  border-bottom: 1px solid #c1c1c1;
}
.record{
  margin-left: 30rpx;
  line-height: 84rpx;
  border-top: 1px solid #c1c1c1;
  font-size: 30rpx;
}
.record:first-child{
  border: none;
}
.record image{
  margin: 10rpx 20rpx 0 0;
  width: 32rpx;
  height: 50rpx;
}
.norecord{
  height: 432rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
}
.norecord icon{
  margin: 60rpx auto;
  display: block;
  width: 200rpx;
}
.norecord text{
  display: block;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}