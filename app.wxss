/**app.wxss**/
page{
  background: #f8f8f8;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
.flex {
  display: flex;
  align-items: center;
  box-sizing: border-box;
} 
.bw{
  justify-content: space-between;
}
.ar{
  justify-content: space-around;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.clear{
  clear: both;
}
.hr{
  border-top: 1px solid #c1c1c1;
}
.navimg{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 50rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 98;
  box-shadow: 6rpx 6rpx 6rpx rgba(0,0,0,.5);
}
.nav-box{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 99;
}
.main-nav{
  position: fixed;
  width: 180rpx;
  height: 428rpx;
  bottom: 220rpx;
  right: 20rpx;
  padding: 0 30rpx;
  text-align: center;
  color: #fff;
  background: #333;
  line-height: 84rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  z-index: 100;
}
.nav-arrow{
  position: absolute;
  bottom: -40rpx;
  right: 50rpx;
  width: 0;
  height: 0;
  border: 20rpx solid;
  border-color: #333 transparent transparent transparent;
}
.main-nav navigator{
  border-top: 1px solid #666;
}
.main-nav navigator:first-child{
  border: none;
}